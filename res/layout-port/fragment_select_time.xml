<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollerPort"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewTitleTimeStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkgreen"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/SubTitleVerticalPadding"
            android:paddingTop="@dimen/SubTitleVerticalPadding"
            android:text="@string/subtitle_timestart"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/UurappFontSize" />

        <nl.uurapp.uurapp.util.MyTimePicker
            android:id="@+id/timePickerStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/SubTitleVerticalPadding"
            android:paddingTop="@dimen/SubTitleVerticalPadding"
            android:textSize="@dimen/UurappFontSize" />

        <TextView
            android:id="@+id/textViewTitleTimeEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkgreen"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/SubTitleVerticalPadding"
            android:paddingTop="@dimen/SubTitleVerticalPadding"
            android:text="@string/subtitle_timeend"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/UurappFontSize" />

        <nl.uurapp.uurapp.util.MyTimePicker
            android:id="@+id/timePickerEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/SubTitleVerticalPadding"
            android:paddingTop="@dimen/SubTitleVerticalPadding"
            android:textSize="@dimen/UurappFontSize" />

        <TextView
            android:id="@+id/textViewTitleHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkgreen"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/SubTitleVerticalPadding"
            android:paddingTop="@dimen/SubTitleVerticalPadding"
            android:text="@string/subtitle_hours"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="@dimen/UurappFontSize" />

        <nl.uurapp.uurapp.util.MyTimePicker
            android:id="@+id/timePickerHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/SubTitleVerticalPadding"
            android:paddingTop="@dimen/SubTitleVerticalPadding" />
    </LinearLayout>

</ScrollView>